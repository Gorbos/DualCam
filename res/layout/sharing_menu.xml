<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@layout/layout_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
          >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharing_menu"
            android:textSize="30px"
            android:layout_centerInParent="true"
            android:textColor="#ffff00" />
    </RelativeLayout>

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" 
        >

        <TextView
            android:id="@+id/textFacebook"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facebook" 
            android:textSize="20px"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#00ff00"
              />

 		<CheckBox
            android:id="@+id/checkBoxFacebook"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
       
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" 
        >

        <TextView
            android:id="@+id/textTwitter"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Twitter" 
            android:textSize="20px"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#00ff00"
              />

 		<CheckBox
            android:id="@+id/checkBoxTwitter"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
       
    </LinearLayout>
    
	

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#048604" >

        <TextView
            android:id="@+id/textTwitter"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Twitter"
            android:textSize="20px"
            android:layout_marginLeft="5dp"
			android:textColor="#93ff98"
			 android:visibility="gone" />


       <!--   <include layout="@layout/compound_button" />-->
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
         
        android:orientation="vertical" >

	    <EditText
	        android:id="@+id/shareMessage"
	        android:layout_width="match_parent"
	        android:hint="@string/image_description"
	        android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
	        android:layout_height="200dp"/>
	 </LinearLayout>
	 
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

	    <Button
	        android:id="@+id/shareCancelBtn"
	        android:layout_width="100dp"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="17dp"
	        android:textColor="#ffff00"
	        android:background="@layout/sharebutton_bg"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:text="@string/cancel_text_in_sharing" />

	    <Button
	        android:id="@+id/shareOkBtn"
	        android:layout_width="100dp"
	        android:layout_height="50dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="17dp"
	        android:textColor="#ffff00"
	        android:background="@layout/sharebutton_bg"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:text="OK" />

	 </RelativeLayout>

</LinearLayout>